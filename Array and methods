print("step 2") 
#Access an element through index
print(my_array[8])

print("step 3")
#Append an element in the array 
my_array.append(10)
print(my_array)
#insert value in an arraya using insert()method

print("step 4") 
my_array.insert(5,90)
print(my_array)
#extend an array 

print("step 5")
#create a new array for extension 
myarray1 = array('i',[11,12,13,14])
my_array.extend(myarray1)
print(my_array)

print("step 6")
#using fromlist()
templist = [21,31,41]
my_array.fromlist(templist)
print(my_array)

print("step 7")
#use remove method 
my_array.remove(6) 
my_array.remove(my_array[0]) #using index
print(my_array)

print("step 8")
#use pop method - This is used to remove the last element 
my_array.pop()
print(my_array)

print("step 9")
#using reverse method 
my_array.reverse()
print(my_array)

print("step 10")
#using index method 
print(my_array.index(2))

#using buffer_info()
print("step 11")
my_array.buffer_info()
print(my_array)

print("step 12")
#checking the count 
print(my_array.count(5))

print("step 13")
#converting array to the list 
  print(my_array.tolist())
  #how to slice an element from the array

